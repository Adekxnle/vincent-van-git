.settings-drawer {
  position: fixed;
  top: 0;
  right: 100%;
  width: 220px;
  height: 100%;
  background: var(--grey);
  box-shadow: -4px 0 20px -10px hsl(0, 0%, 10%) inset;
}

// Related to sliding the body when the drawer opens.
body {
  transform: translate(calc((var(--open) * 220) * 1px), 0);
  transition: transform 0.25s;
}

.settings-drawer__toggle {
  position: absolute;
  left: 100%;
  top: 0;
}

.settings-drawer__form {
  padding: var(--padding);
  margin: 0;
  h2 {
    color: var(--color);
    margin: 0 0 calc(1.5 * var(--padding)) 0;
  }

  input {
    width: 100%;
  }


  [type="submit"] {
    width: 100%;
    height: 44px;
    border-radius: 6px;
    background: var(--green-two);
    color: #fff;
    font-weight: bold;
    font-size: 1.25rem;
    transition: background 0.2s, box-shadow 0.2s, transform 0.2s;
    box-shadow: 4px 4px 0px -2px hsla(0, 0%, 0%, 0.25);

    &:hover {
      background: var(--green-three);
    }

    &:active {
      background: var(--green-four);
      box-shadow: 0px 0px 0px 0px hsla(0, 0%, 0%, 1);
      transform: translate(2px, 2px);
    }
  }

  &:invalid [type="submit"] {
    box-shadow: none;
    background: hsl(216, 14%, 83%);
    color: var(--grey);
    cursor: not-allowed;

    &:active {
      transform: translate(0px, 0px);
    }
  }

  &-field {
    margin-bottom: var(--padding);

    label {
      display: block;
      margin-bottom: calc(var(--padding) * 0.25);
      color: var(--color);
    }

    input {
      border: 0;
    }
  }
}
