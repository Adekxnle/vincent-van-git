.commit-grid {
  --cell-radius: 2;
  --cell-size: 11;
  --cell-gap: 5;
  --green-one: hsl(130, 64%, 76%);
  --green-two: hsl(136, 53%, 51%);
  --green-three: hsl(136, 54%, 41%);
  --green-four: hsl(139, 54%, 28%);
  display: inline-grid;
  grid-template-columns: repeat(53, auto);
  grid-template-rows: repeat(7, auto);
  grid-gap: calc(var(--cell-gap) * 1px);
  grid-auto-flow: dense;

  &__cell {
    --bg: hsl(216, 14%, 93%);
    height: calc(var(--cell-size) * 1px);
    width: calc(var(--cell-size) * 1px);
    background: var(--bg);
    border-radius: calc(var(--cell-radius) * 1px);
    grid-column: var(--column);

    &[data-level="1"] {
      --bg: var(--green-one);
    }
    &[data-level="2"] {
      --bg: var(--green-two);
    }
    &[data-level="3"] {
      --bg: var(--green-three);
    }
    &[data-level="4"] {
      --bg: var(--green-four);
    }
  }

}